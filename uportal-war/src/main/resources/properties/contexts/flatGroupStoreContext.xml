<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-3.1.xsd">

    <bean id="flatGroupStore" class="edu.wisc.my.groups.east.FlatGroupStore">
        <property name="flatGroupStoreDao" ref="jdbcFlatGroupStoreDao" />
        <property name="rootGroupKey" value="root" />
        <property name="rootGroupEntityType" value="org.jasig.portal.security.IPerson" />
        <property name="rootGroupName" value="JoinIn Groups" />
        <property name="rootGroupDescription" value="JoinIn Managed Groups" />
    </bean>

    <bean id="jdbcFlatGroupStoreDao" class="edu.wisc.my.groups.east.jdbc.JdbcFlatGroupStoreDao">
        <property name="jdbcOperations">
            <bean class="org.springframework.jdbc.core.JdbcTemplate">
                <property name="dataSource" ref="JoinIn" />
            </bean>
        </property>
    </bean>
    
    <bean id="edu.wisc.my.groups.east.FlatGroupStoreLocator"
            class="edu.wisc.my.groups.east.FlatGroupStoreLocator">
        <constructor-arg index="0" ref="flatGroupStore" />
    </bean>
</beans>
